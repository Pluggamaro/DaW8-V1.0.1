<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="200.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.ForgotPasswordController">
    <children>
        <Label layoutX="68.0" layoutY="31.0" text="Forgot Password" textFill="#049eff">
            <font>
                <Font size="18.0" />
            </font>
        </Label>
        <TextField fx:id="usernameTextField" layoutX="108.0" layoutY="80.0" promptText="Username" />
        <TextField fx:id="emailTextField" layoutX="108.0" layoutY="120.0" promptText="Email" />
        <Button fx:id="resetButton" layoutX="108.0" layoutY="160.0" mnemonicParsing="false" onAction="#resetPassword" text="Reset" />
        <Button fx:id="cancelButton" layoutX="188.0" layoutY="160.0" mnemonicParsing="false" onAction="#cancelReset" text="Cancel" />
    </children>
</AnchorPane>
